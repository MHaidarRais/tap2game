<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <TextView
                android:id="@+id/timeText"
                android:text="TIME: 10"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textAlignment="center"/>

        <android.support.v7.widget.GridLayout
                tools:layout_editor_absoluteY="199dp"
                android:layout_width="392dp"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp">

            <ImageView
                    android:id="@+id/honda1"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor1"/>

            <ImageView
                    android:id="@+id/honda2"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="1"
                    app:layout_row="0"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor2"/>

            <ImageView
                    android:id="@+id/honda3"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="2"
                    app:layout_row="0"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor3"/>

            <ImageView
                    android:id="@+id/honda4"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="0"
                    app:layout_row="1"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor4"/>

            <ImageView
                    android:id="@+id/honda5"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="1"
                    app:layout_row="1"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor5"/>

            <ImageView
                    android:id="@+id/honda6"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="2"
                    app:layout_row="1"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor6"/>

            <ImageView
                    android:id="@+id/honda7"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="0"
                    app:layout_row="2"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor7"/>

            <ImageView
                    android:id="@+id/honda8"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="1"
                    app:layout_row="2"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor8"/>

            <ImageView
                    android:id="@+id/honda9"
                    android:layout_width="132dp"
                    android:layout_height="127dp"
                    app:layout_column="2"
                    app:layout_row="2"
                    android:onClick="increaseScore"
                    app:srcCompat="@drawable/motor9"/>
        </android.support.v7.widget.GridLayout>

        <Button
                android:id="@+id/btn_score"
                android:text="score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textSize="24sp"
                android:visibility="invisible"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/black_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle"
            android:alpha="0.7"/>

    <ImageView
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/time_bfr_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="100sp"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

</RelativeLayout>